
<!DOCTYPE html>
<html>

<header>
</header>
    <head>
        <h1>Editing Post</h1>
    </head>

<body>
    <nav>
        <%= link_to 'Home', root_path %> <%= link_to 'JM\'s Reviews', articles_path %> <%= link_to 'Post a Review', new_article_path %>
    </nav>
<div class='box'>
<section class ='section-1'>
        <%= form_for :article, url: article_path(@article), method: :patch do |f| %>

          <p>
            <%= f.label :img_url %><br>
            <%= f.text_field :img_url %>
          </p>

          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>

          <p>
            <%= f.submit %>
          </p>
      <% end %>
    </section>
    </div>

      <footer>
      <%= link_to 'Back', articles_path %>
      </footer>


</body>
</html>
