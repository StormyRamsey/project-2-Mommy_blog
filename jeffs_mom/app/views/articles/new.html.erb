

<!DOCTYPE html>
<html>
<header>
</header>
    <head>
        <h1>Post a New Review</h1>
    </head>
<body>
    <nav>
        <%= link_to 'Home', root_path %> <%= link_to 'JM\'s Reviews', articles_path %> <%= link_to 'Post a Review', new_article_path %>
    </nav>

    <div class='box'>
    <section class ='section-1'>
        <%= form_for :article, url: articles_path do |f| %>

          <p>
            <%= f.label :img_url %><br>
            <%= f.file_field :image %>
          </p>

          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>

          <p>
            <%= f.submit %>
          </p>
        <% end %>
    </section>
    </div>

    <footer>
    <%= link_to 'Back', articles_path %>
    </footer>

</body>
</html>
