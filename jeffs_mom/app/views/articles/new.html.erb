

<!DOCTYPE html>
<html>
<header>

</header>
    <head>
      <h1><%= link_to 'Jeffrey\'s Mom', root_path %></h1>
    </head>
<body>
    <nav>
        <%= link_to 'Home', root_path %> <%= link_to 'JM\'s Reviews', articles_path %> <%= link_to 'Post a Review', new_article_path %>
    </nav>

    <div class='article-form'>
    <section class ='article-input'>
      <h2>Post a Review</h2>
        <%= form_for :article, url: articles_path do |f| %>

          <p>
            <%= f.label :img_url %><br>
            <%= f.text_field :img_url %>
          </p>

          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>

          <p>
            <%= f.submit :value => "Post Review", :class => "submit" %>
          </p>
        <% end %>
    </section>
    </div>

    <footer>
    <%= link_to 'Back', articles_path %>
    </footer>

</body>
</html>
