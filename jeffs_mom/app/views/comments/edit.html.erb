<!DOCTYPE html>
<html>
<header>
</header>

  <body>


      <div class="article-edit-comment">
        <div class="article">
            <%= form_for [@article, @comment] do |f| %>
              <h3><%= @article.title %></h3>
              <img src="<%= @article.img_url %>"/>
              <p><%= @article.text %></p>
        </div>
      </div>


      <div class="comment-box">
        <div class='comments'>
          <h3>Edit Comment</h3>
            <p>
              <%= f.label :name%><br>
              <%= f.text_field :commenter %>
            </p>
            <p>
              <%= f.label :comment %><br>
              <%= f.text_area :body %>
            </p>
            <p>
              <%= f.submit :value => "Edit Comment", :class => "submit"%>
          <% end %>
        </div>
      </div>




</body>
</html>
