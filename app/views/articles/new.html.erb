

<!DOCTYPE html>
<html>
<header>

</header>

<body>


    <div class='article-form'>
    <div class ='article-input'>
      <h2>Post a Review</h2>
        <%= form_for :article, url: articles_path do |f| %>

          <p>
            <%= f.label :img_url %><br>
            <%= f.text_field :img_url %>
          </p>

          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>

          <p>
            <%= f.submit :value => "Post Review", :class => "submit" %>
          </p>
        <% end %>
    </div>
    </div>

</body>
</html>
